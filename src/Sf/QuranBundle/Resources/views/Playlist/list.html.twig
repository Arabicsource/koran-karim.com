{% extends 'CoreBundle::layout.html.twig' %}

{% block body %}
    {% set cp=0 %}
    <section class="bodywrapper inner">
        <section class="mainwrapper">
            <h2>{{ 'global.playlist' | trans }}
                <a href="{{ path('playlist_create') }}"
                   class="create-playlist animated-hover">{{ 'playlist.create' | trans }}</a>
                <span class="h-line"></span>
            </h2>
            <section id="playlist-player">
            </section>
            <section class="grid">
                {% for playlist in playlists %}
                    <figure class="column c-one-fourth">
                        <div class="img-det">
                            <h3> {{ playlist.name }}
                                <span class="h-line"></span>
                            </h3>

                            <p>
                                <a href="{{ path('playlist_play',{'id' : playlist.id }) | url_decode() }}"
                                   class="playlist-listen animated-hover">{{ 'playlist.listen' | trans }}</a>
                                <a href="{{ path('playlist_edit',{'id' : playlist.id }) }}"
                                   class="playlist-edit animated-hover">{{ 'playlist.edit' | trans }}</a>
                                <a href="#"
                                   yes-trans="{{ 'playlist.ok' | trans }}"
                                   cancel-trans="{{ 'playlist.cancel' | trans }}"
                                   title-trans="{{ 'playlist.confirm_delete' | trans }}"
                                   delete-url="{{ path('playlist_delete',{'id' : playlist.id }) }}"
                                   id="{{ 'playlist_' ~ playlist.id }}"
                                   class="playlist-delete animated-hover">{{ 'playlist.delete' | trans }}</a>
                            </p>
                        </div>
                    </figure>
                {% else %}
                    <div class="alert info hideit">
                        <p>
                            {{ 'playlist.you_dont_have_playlist' | trans }}
                        </p>
                        <span class="close"></span>
                    </div>
                {% endfor %}

            </section>
        </section>
    </section>

{% endblock %}